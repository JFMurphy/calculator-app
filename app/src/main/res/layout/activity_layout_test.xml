<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="calculator.johnmurphy.com.activities.LayoutTest">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background=""
        ></HorizontalScrollView>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/outputDisplay"
        android:inputType="number"
        android:textCursorDrawable="@null"
        android:cursorVisible="true"/>

    <GridLayout
        android:layout_below="@id/outputDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonClear"
            android:onClick="clearDisplay"
            android:text="AC"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonPercent"
            android:onClick="addElement"
            android:text="%"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonDivide"
            android:onClick="addElement"
            android:text="/"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonDelete"
            android:onClick="deleteElement"
            android:text="DEL"
            android:layout_row="0"
            android:layout_column="3" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonSeven"
            android:onClick="addElement"
            android:text="7"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonEight"
            android:onClick="addElement"
            android:text="8"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonNine"
            android:onClick="addElement"
            android:text="9"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonMultiply"
            android:onClick="addElement"
            android:text="*"
            android:layout_row="1"
            android:layout_column="3" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonFour"
            android:onClick="addElement"
            android:text="4"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonFive"
            android:onClick="addElement"
            android:text="5"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonSix"
            android:onClick="addElement"
            android:text="6"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonSubtract"
            android:onClick="addElement"
            android:text="-"
            android:layout_row="2"
            android:layout_column="3" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonOne"
            android:onClick="addElement"
            android:text="1"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonTwo"
            android:onClick="addElement"
            android:text="2"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonThree"
            android:onClick="addElement"
            android:text="3"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonAdd"
            android:onClick="addElement"
            android:text="+"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonBrackets"
            android:onClick="addBrackets"
            android:text="()"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonZero"
            android:onClick="addElement"
            android:text="0"
            android:layout_row="4"
            android:layout_column="1" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonPoint"
            android:onClick="addElement"
            android:text="."
            android:layout_row="4"
            android:layout_column="2" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/buttonEquals"
            android:onClick="sendEquation"
            android:text="="
            android:layout_row="4"
            android:layout_column="3" />

    </GridLayout>
</TableLayout>
